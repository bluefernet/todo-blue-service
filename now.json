{
    "version": 2,
    "builds": [
        {
            "src": "./pkg/shared/**/*.ts",
            "use": "@now/node"
        },
        {
            "src": "./pkg/tasks/**/*.ts",
            "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/v1/tasks",
            "dest": "/pkg/tasks/transport/http/tasks-endpoint.ts"
        },
        {
            "src": "/v1/task/(?<id>[^/]+)",
            "dest": "/pkg/tasks/transport/http/task-endpoint.ts?id=$id"
        }
    ]
}